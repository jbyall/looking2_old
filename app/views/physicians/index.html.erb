<p id="notice"><%= notice %></p>
    <% content_for :title do %>
    	Physician Search
    <% end %>
    <% content_for :list do %>
      <%= link_to 'List', new_physician_path %>
    <% end %>
    <section id="results-section">
        <div id="results-container">
	        <% @physicians.each do |physician| %>
	        <br>
	            <p class="result-link"><%= link_to physician.contact.name, physician %></p>
	            <p class="result-title"><%= physician.categoryDisplay %></p>
	            <p class="result-categories"><%= physician.categorySearchDisplay.join(' | ') %></p>
	            <p class="contact-address"><%= physician.contact.local %></p>
	            <p class="contact-address"><%= physician.contact.phone %></p>
	        <% end %>
	    </div>
    </section>
    <aside id="search-aside">
    	<div id="search-container">
    		<h2>Search Form</h2>
    		<%= form_tag(physicians_search_path, method: "get") do %>
    			<p>
	    			<%= label_tag(:nameSearch, "Name:") %>
	    			<%= text_field_tag :nameSearch, (@name or nil) %>
	    		</p>
	    		<p>
    			<%= label_tag(:locationSearch, "Location:") %>
    			<%= text_field_tag :locationSearch, (@location or nil) %>
    			</p>
    			<p>
    			<%= label_tag(:categorySearchDisplay, "Category:") %>
  				<%= text_field_tag :categorySearchDisplay, (@category or nil) %>
  				</p>
  				<p>
  				<%= submit_tag("Search") %>
  				</p>
    		<% end %>
    	</div>
    </aside>